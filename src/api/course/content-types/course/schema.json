{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2
    },
    "department": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::department.department",
      "inversedBy": "courses"
    },
    "classes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::class.class",
      "inversedBy": "courses"
    },
    "courseAssignments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-assignment.course-assignment",
      "mappedBy": "course"
    },
    "code": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "creditHours": {
      "type": "integer",
      "required": true,
      "default": 3
    }
  }
}
